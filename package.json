{
  "name": "pocketbase-zod-schema-monorepo",
  "version": "0.1.0",
  "description": "Monorepo for PocketBase Zod Schema library",
  "private": true,
  "type": "module",
  "workspaces": [
    "package"
  ],
  "scripts": {
    "build": "yarn workspace pocketbase-zod-schema build",
    "dev": "yarn workspace pocketbase-zod-schema dev",
    "test": "yarn workspace pocketbase-zod-schema test",
    "test:watch": "yarn workspace pocketbase-zod-schema test:watch",
    "test:coverage": "yarn workspace pocketbase-zod-schema test:coverage",
    "test:e2e": "vitest run --config tests/e2e/vitest.config.ts",
    "test:e2e:watch": "vitest --config tests/e2e/vitest.config.ts",
    "test:e2e:verbose": "E2E_LOG_LEVEL=debug vitest run --config tests/e2e/vitest.config.ts",
    "test:e2e:coverage": "vitest run --coverage --config tests/e2e/vitest.config.ts",
    "typecheck": "yarn workspace pocketbase-zod-schema typecheck",
    "format": "yarn workspace pocketbase-zod-schema format",
    "lint": "yarn workspace pocketbase-zod-schema lint",
    "clean": "yarn workspace pocketbase-zod-schema clean",
    "publish:npm": "yarn workspace pocketbase-zod-schema publish:npm",
    "precommit": "yarn lint && yarn typecheck && yarn test",
    "prepare": "husky install",
    "db:generate": "npx --yes tsx package/src/cli/migrate.ts generate",
    "db:status": "npx --yes tsx package/src/cli/migrate.ts status",
    "db:download": "node scripts/download-pocketbase.js",
    "db:start": "node scripts/start-pocketbase.js",
    "db:stop": "node scripts/stop-pocketbase.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "dastron",
  "license": "MIT",
  "packageManager": "yarn@4.8.1",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "husky": "^9.0.0",
    "tsx": "^4.21.0",
    "vitest": "^4.0.16"
  }
}
