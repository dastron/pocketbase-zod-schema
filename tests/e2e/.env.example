# E2E Test Environment Configuration

# PocketBase version to test against
PB_VERSION=0.34.2

# Test workspace directory (where temporary PocketBase instances are created)
E2E_WORKSPACE_DIR=./tests/e2e/workspaces

# Timeout settings (in milliseconds)
E2E_DOWNLOAD_TIMEOUT=60000
E2E_STARTUP_TIMEOUT=30000

# Logging level for E2E tests (debug, info, warn, error)
E2E_LOG_LEVEL=info

# Port range for test PocketBase instances
E2E_PORT_START=8090
E2E_PORT_END=8190

# Test execution settings
E2E_MAX_PARALLEL_TESTS=1
E2E_CLEANUP_ON_SUCCESS=true
E2E_CLEANUP_ON_FAILURE=false

# PocketBase download settings
E2E_PB_DOWNLOAD_DIR=./tests/e2e/downloads
E2E_PB_CACHE_ENABLED=true